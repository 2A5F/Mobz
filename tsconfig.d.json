{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "type",
        "jsx": "react",
        "jsxFactory": "createElement"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ],
    "exclude": [
        "./src/tests/**/*.ts",
        "./src/tests/**/*.tsx"
    ]
}